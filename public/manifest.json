{
  "name": "Mindfulness",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "host_permissions": ["https://*/*"],
  "background": {
    "service_worker": "src/scripts/background.js"
  },
  "content_scripts": [
    {
      "js": ["src/scripts/content.js"],
      "matches": ["https://*/*"]
    }
  ],
  "permissions": ["storage"]
}
